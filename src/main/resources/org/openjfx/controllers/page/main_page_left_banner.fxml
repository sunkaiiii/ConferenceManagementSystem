<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.BorderPane" style="-fx-background-color: #FFFFFF" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            >
    <top>
        <VBox alignment="CENTER">
            <ImageView fitHeight="100" fitWidth="100">
                <Image url="@../../images/monash.png"/>
            </ImageView>
            <VBox>
                <padding>
                    <Insets left="8" right="8" top="16"/>
                </padding>
                <HBox fx:id="conferenceManagement" onMouseClicked="#onItemClick">
                    <padding>
                        <Insets bottom="8"/>
                    </padding>
                    <Pane prefWidth="4" style="-fx-background-color: #0C7CBA" fx:id="conferenceManagementIndicator"/>
                    <Label text="Conference Management" fx:id="conferenceManagementText">
                        <padding>
                            <Insets left="4"/>
                        </padding>
                    </Label>
                </HBox>
                <HBox fx:id="paperSubmission" onMouseClicked="#onItemClick">
                    <Pane prefWidth="4" style="-fx-background-color: #0C7CBA" visible="false" fx:id="paperManagementIndicator"/>
                    <Label text="Paper Submission" fx:id="paperManagementText">
                        <padding>
                            <Insets left="4"/>
                        </padding>
                    </Label>
                    <padding>
                        <Insets bottom="8"/>
                    </padding>
                </HBox>
                <HBox fx:id="reviewManagement" onMouseClicked="#onItemClick">
                    <Pane prefWidth="4" style="-fx-background-color: #0C7CBA" visible="false" fx:id="reviewManagementIndicator"/>
                    <Label text="Review Management" fx:id="reviewManagementText">
                        <padding>
                            <Insets left="4"/>
                        </padding>
                    </Label>
                    <padding>
                        <Insets bottom="8"/>
                    </padding>
                </HBox>

            </VBox>
        </VBox>

    </top>


</fx:root>
