<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<StackPane prefWidth="Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.controllers.page.MyPaperListCell" style="-fx-background-color: white; -fx-background-radius: 8">
    <padding>
        <Insets left="32" right="32" top="16" bottom="16"/>
    </padding>
    <BorderPane prefWidth="Infinity" >
        <left>
            <VBox alignment="CENTER_LEFT">
                <Label fx:id="paperName">
                    <font>
                        <Font name="System bold" size="16"/>
                    </font>
                </Label>
                <Label fx:id="keywords" textFill="gray" />
                <Label fx:id="authors" textFill="gray"/>
            </VBox>
        </left>
        <center>
            <HBox alignment="CENTER">
                <Label text="Submitted by:" >
                    <font>
                        <Font name="System bold"/>
                    </font>
                </Label>
                <Label fx:id="submittedName">
                    <font>
                        <Font name="System bold"/>
                    </font>
                </Label>
            </HBox>
        </center>
        <right>
            <HBox alignment="CENTER">
                <VBox alignment="CENTER_LEFT">
                    <padding>
                        <Insets right="16"/>
                    </padding>
                    <Label text="submitted at:" />
                    <Label fx:id="submittedTime" />
                </VBox>
                <VBox alignment="CENTER" >
                    <StackPane fx:id="statusBackground" style="-fx-background-color: #428452;-fx-background-radius: 32" prefHeight="32" maxHeight="32" onMouseClicked="#onStatusButtonClicked">
                        <padding>
                            <Insets left="32" right="32"/>
                        </padding>
                        <Label fx:id="paperStatus" textFill="white" prefHeight="16" maxHeight="16">
                            <font>
                                <Font name="System bold"/>
                            </font>
                        </Label>
                    </StackPane>
                    <HBox fx:id="statusContainer" alignment="CENTER"/>
                </VBox>



            </HBox>
        </right>
    </BorderPane>

</StackPane>
